<h2>New Cat</h2>


<form action="<%= cats_url %>" method="post">

  <label>Name:
    <input type="text" name="cat[name]" value="">
  </label>
  <br>
  <label>Birthdate:
    <input type="date" name="cat[birth_date]" value="">
  </label>
  <br>

  <label>Color: 
    <select name="cat[color]">
      <option disabled selected>Color</option>
      <%@cat.colors.each do |color|%>
      <option value="<%=color%>"><%=color%></option>
      <%end%>
    </select>
  </label>
  <br>

  <label>Sex:
    <input type="radio" name="cat[sex]" value="M">M
    <input type="radio" name="cat[sex]" value="F">F<br/>
  
  </label>
  <br>

  <label>Description:
    <input type="text" name="cat[description]" value="">
  </label>
  <br>

  <input type="submit" value="Add">

</form>