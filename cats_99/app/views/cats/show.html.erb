
<h2>Our cute cat <%= @cat.name %>'s Information</h2>
<div>
  <table>
    <thead>
      <tr>
        <th><%= @cat.name %></th>
      </tr>
    </thead>
    <tbody>
    <tr>
    <td>Birthdate</td>
    <td><%= @cat.birth_date %></td>
    </tr>
    <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
    </tr>
    <tr>
    <td>Age</td>
    <td><%= @cat.age %></td>
    </tr>
    <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
    </tr>
    <tr>
    <td>Description</td>
    <td><%= @cat.description %></td>
    </tr>

    </tbody>
  </table>

</div>